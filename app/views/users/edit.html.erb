<div class="container">
  <h2>ユーザーネーム変更</h2>
  <div class="row">
    <%= form_with model:@user, local:true do |f| %>
      <label for="inputName">ユーザーネーム</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザーネーム"%>
      <%= f.submit "変更を保存" %>
    <% end %>
  </div>
</div>
